@model YaustinMusicShopOnline.Models.MusicGenreModel

@{
    ViewData["Title"] = "Index";

   
}

<h1>Browse Music</h1>

<form asp-controller="Customers" asp-action="Index" method="get">
   <p>
        Filter by Genre: <select asp-for="MusicGenre" asp-items="Model.Genres">
            <option value="">All</option>
       </select>

        Filter by Artist:
        <select asp-for="MusicArtist" asp-items="Model.Artists">
            <option value="">All</option>
        </select>

        <input type="submit" value="Filter" />

   </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musics![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Musics!) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>


                <td>
                    
                    <a asp-action="ShoppingCart" asp-route-id="@item.MusicId">Add to Cart</a> |
                 
                </td>
            
        </tr>
}
    </tbody>
</table>
